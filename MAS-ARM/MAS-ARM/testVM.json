{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "testsrv01sa01Type": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "test-srv01Name": {
      "type": "string",
      "minLength": 1
    },
    "test-srv01AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "test-srv01AdminPassword": {
      "type": "securestring"
    },
    "test-srv01WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    }
  },
  "variables": {
    "testsrv01sa01Name": "[concat('testsrv01sa01', uniqueString(resourceGroup().id))]",
    "test-vnet01Prefix": "10.0.0.0/16",
    "test-vnet01Subnet1Name": "Subnet-1",
    "test-vnet01Subnet1Prefix": "10.0.0.0/24",
    "test-vnet01Subnet2Name": "Subnet-2",
    "test-vnet01Subnet2Prefix": "10.0.1.0/24",
    "test-srv01ImagePublisher": "MicrosoftWindowsServer",
    "test-srv01ImageOffer": "WindowsServer",
    "test-srv01OSDiskName": "test-srv01OSDisk",
    "test-srv01VmSize": "Standard_D2_v2",
    "test-srv01VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'test-vnet01')]",
    "test-srv01SubnetRef": "[concat(variables('test-srv01VnetID'), '/subnets/', variables('test-vnet01Subnet1Name'))]",
    "test-srv01StorageAccountContainerName": "vhds",
    "test-srv01NicName": "[concat(parameters('test-srv01Name'), 'NetworkInterface')]"
  },
  "resources": [
    {
      "name": "[variables('testsrv01sa01Name')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('testsrv01sa01Type')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "testsrv01sa01"
      },
      "kind": "Storage"
    },
    {
      "name": "test-vnet01",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "test-vnet01"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('test-vnet01Prefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('test-vnet01Subnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('test-vnet01Subnet1Prefix')]"
            }
          },
          {
            "name": "[variables('test-vnet01Subnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('test-vnet01Subnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('test-srv01NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'test-vnet01')]"
      ],
      "tags": {
        "displayName": "test-srv01Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('test-srv01SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('test-srv01Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('testsrv01sa01Name'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('test-srv01NicName'))]"
      ],
      "tags": {
        "displayName": "test-srv01"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('test-srv01VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('test-srv01Name')]",
          "adminUsername": "[parameters('test-srv01AdminUsername')]",
          "adminPassword": "[parameters('test-srv01AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('test-srv01ImagePublisher')]",
            "offer": "[variables('test-srv01ImageOffer')]",
            "sku": "[parameters('test-srv01WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "test-srv01OSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('testsrv01sa01Name')), '2016-01-01').primaryEndpoints.blob, variables('test-srv01StorageAccountContainerName'), '/', variables('test-srv01OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('test-srv01NicName'))]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
  }
}
